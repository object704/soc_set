<div id="foto_friends_info_wall">
    <div id="foto_friends">
        <div id="foto"><a class="gallery" href="{{ asset(user.put)}}"><img src="{{ asset(user.put) }}"></a></div>

        <div id="changeFoto"><input type="button" class="textBtn" id="changeFotoBtn" value="Сменить фото"></div>

    </div>

</div>
<div id="changeFotoDialog" title="Сменить фото">
    <form action="{{ path('first_page') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}


        <input type="submit" value="Загрузить" />
    </form>
</div>


<div id="first">
    <p>{{ 'profile.show.firstName'|trans({}, 'FOSUserBundle') }}: {{ user.firstName }}</p>
    <p>{{ 'profile.show.lastName'|trans({}, 'FOSUserBundle') }}: {{ user.lastName }}</p>

    <p>{{ 'fos_user_profile_form_spec'|trans({}, 'FOSUserBundle') }} {{ user.spec }} </p>
    <p>{{ 'fos_user_profile_form_grouppa'|trans({}, 'FOSUserBundle') }} {{ user.group }} </p>


</div>

