        <link rel="stylesheet" href="{{ asset('bundles/userbundle/css/user.css') }}" type="text/css" media="all" />

{%endblock%}

{% block glav%}
<h2>Ваш профиль</h2>
<script>
    $(document).ready(function() {
        $("a.gallery").fancybox();
        //$("#buttonFriend").button().css("width","200px");
        $("#changeFotoBtn").button().css("width","200px");
    });

</script>

